\subsection{\texorpdfstring{Case 4: $r_{3,1} = 243$, $r_{3,2} = 729$ }{Case 4: r_{3,1} = 243 , r_{3,2} = 729}}


Consider the equation

\begin{equation} \label{5.00}
    729 \cdot C^2 + 177147 \cdot C + 14348907 = 2187 \cdot B^2 + 1594323 \cdot B + 387420489
\end{equation}


It is observable that
\[
\begin{aligned}
729 &= 3^6,\\
177147 &= 3^{11},\\
14348907 &= 3^{15},\\
2187 &= 3^{7},\\
1594323 &= 3^{13},\\
387420489 &= 3^{18}.\\
\end{aligned}
\]

Therefore the equation becomes
\begin{align}
3^6 \cdot C^2 + 3^{11} \cdot C + 3^{15}
=
3^7 \cdot B^2 + 3^{13} \cdot B + 3^{18}.
\end{align}

Dividing through by $3^7$ yields
\begin{align}
C^2 + 3^5 \cdot C + 3^{9} = 3 \cdot B^2 + 3^7 \cdot B + 3^{12}.
\end{align}

\subsubsection{Completion of squares}

\begin{align*}
C^2 + 3^5 \cdot C + 3^{9} &= 3 \cdot B^2 + 3^7 \cdot B + 3^{12} \\
C^2 + 2 \cdot \dfrac{3^5}{2} \cdot C + 3^{9} &= 3 \cdot \left(B^2 + 3^6 \cdot B + 3^{11}\right)\\
C^2 + 2 \cdot \dfrac{3^5}{2} \cdot C + 3^{9} + \left(\dfrac{3^5}{2}\right)^2 - \left(\dfrac{3^5}{2}\right)^2 &= 3 \cdot \left(B^2 + 2 \cdot \dfrac{3^6}{2} \cdot B + 3^{11} + \left(\dfrac{3^6}{2}\right)^2 - \left(\dfrac{3^6}{2}\right)^2\right)\\
\left(C + \dfrac{3^5}{2}\right)^2 + 3^{9} - \left(\dfrac{3^5}{2}\right)^2 &= 3 \cdot \left(\left(B + \dfrac{3^6}{2}\right)^2 + 3^{11}  - \left(\dfrac{3^6}{2}\right)^2\right)\\
\left(C + \dfrac{3^5}{2}\right)^2 + 3^{9} - \left(\dfrac{3^5}{2}\right)^2 &= 3 \cdot \left(B + \dfrac{3^6}{2}\right)^2 + 3 \cdot \left(3^{11}  - \left(\dfrac{3^6}{2}\right)^2\right)\\
\left(C + \dfrac{3^5}{2}\right)^2 - 3 \cdot \left(B + \dfrac{3^6}{2}\right)^2  &= 3 \cdot \left(3^{11}  - \left(\dfrac{3^6}{2}\right)^2\right) + \left(\dfrac{3^5}{2}\right)^2 - 3^{9}\\
\left(C + \dfrac{3^5}{2}\right)^2 - 3 \cdot \left(B + \dfrac{3^6}{2}\right)^2  &= \dfrac{255879}{2}\\
\left(2C + 3^5\right)^2 - 3 \cdot \left(2B + 3^6\right)^2 = 26 \cdot 3^{9}
\end{align*}

\subsubsection{Reduction to a Pell equation}

Define
\[
X = 2C + 3^5, \qquad Y = 2B + 3^6.
\]
Then
\begin{align}
X^2 - 3Y^2 = 78 \cdot 3^{8}.
\end{align}

Write
\[
X = 3^4 \cdot x, \qquad Y = 3^4 \cdot y.
\]
Dividing through by $3^{8}$ yields the Pell-type equation
\begin{align}
x^2 - 3y^2 = 78
\end{align}

  The  Pell equation

    \begin{equation} \label{6.1}
        x^2 - 3y^2 = 1
    \end{equation}
    has fundamental solution \((x_1, y_1) = (7, 4)\), since \(7^2 - 3(4)^2 = 1\).
    All solutions of the homogeneous Pell equation are generated by
    \[
        x + y\sqrt{3} = (7 + 4\sqrt{3})^{c_1}.
    \]

    Now, we seek a particular integer solution to \eqref{eq:pell}.
    Testing small integer values of $y$,
    \[
        y = 7 \quad \Rightarrow \quad x^2 = 78 + 3(7)^2 = 78 + 147 = 225 = 15^2.
    \]
    Hence, one particular solution is \((x_0, y_0) = (15, 7)\).

    The general integer solution to~\eqref{eq:pell} is therefore
    \[
        x + y\sqrt{3} = (15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1}, \quad n \in \mathbb{Z}.
    \]
    Taking the conjugate and adding/subtracting, we obtain
    \begin{align*}
        x &= \frac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2},\\[4pt]
        y &= \frac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2\sqrt{3}}.
    \end{align*}

    Substituting back \(X = 2C + 3^5\) and \(Y = 2B + 3^{6}\),
    \begin{align*}
        C &= \frac{X - 3^5}{2}
        = \frac{-3^5 + 3^4 \cdot \dfrac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2}}{2}\\[4pt]
        &= \frac{-486 + 81 \cdot \biggl[(15 + 7\sqrt{3})(2 + \sqrt{3})^{c_1} + (15 - 7\sqrt{3})(2 - \sqrt{3})^{c_1}\biggl]}{4},\\[8pt]
        B &= \frac{Y - 3^{6}}{2}
        = \frac{-1458 + 81 \cdot \dfrac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2\sqrt{3}}}{2}\\
        &= \frac{-1458 + 81 \cdot \biggl[\dfrac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{\sqrt{3}}\biggl]}{4}\\
        &= \frac{-1458 + 81 \cdot \biggl[{(5 \sqrt{3} + 7)(7 + 4\sqrt{3})^{c_1} + (7 - 5 \sqrt{3} )(7 - 4\sqrt{3})^{c_1}}\biggl]}{4}\\
    \end{align*}


\begin{theorem}[Complete Parametrisation of Solutions]
All integer solutions $(B,C)$ of
\begin{equation*} 
     729 \cdot C^2 + 177147 \cdot C + 14348907 = 2187 \cdot B^2 + 1594323 \cdot B + 387420489
\end{equation*}
are given by
\[
\boxed{
\begin{aligned}
A_4 &= 
\frac{-486 + 81 \cdot \biggl[(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}\biggl]}{4} + 243, \\
B_4 &= \frac{-1458 + 81 \cdot \biggl[{(5 \sqrt{3} + 7)(7 + 4\sqrt{3})^{c_1} + (7 - 5 \sqrt{3} )(7 - 4\sqrt{3})^{c_1}}\biggl]}{4},\\[6pt]
C_4 &= 
\frac{-486 + 81 \cdot \biggl[(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}\biggl]}{4}, \\
D_4 &= 
\frac{-1458 + 81 \cdot \biggl[{(5 \sqrt{3} + 7)(7 + 4\sqrt{3})^{c_1} + (7 - 5 \sqrt{3} )(7 - 4\sqrt{3})^{c_1}}\biggl]}{4} + 729.\\[6pt]
\end{aligned}
}
\]
where $c_1\in\mathbb{Z}$.
\end{theorem}


\subsection{\texorpdfstring{Case 5: $r_{3,1} = 729$,  $r_{3,2} = 2187$ }{Case 5: r_{3,1} = 729 , r_{3,2} = 2187}}

Consider the equation
\begin{equation} 
    2187 \cdot C^2 + 1594323 \cdot C + 387420489 = 6561 \cdot B^2 + 14348907 \cdot B + 10460353203
\end{equation}


Observe that
\[
\begin{aligned}
2187 &= 3^7,\\
1594323 &= 3^{13},\\
387420489 &= 3^{18},\\
6561 &= 3^{8},\\
14348907 &= 3^{15},\\
10460353203 &= 3^{21}.\\
\end{aligned}
\]

Hence the equation becomes
\begin{align}
3^7 \cdot C^2 + 3^{13} \cdot C + 3^{18}
=
3^8 \cdot B^2 + 3^{15} \cdot B + 3^{21}.
\end{align}

Dividing through by $3^7$ yields
\begin{align}
C^2 + 3^6 \cdot C + 3^{11} = 3 \cdot B^2 + 3^8 \cdot B + 3^{14}.
\end{align}

\subsubsection{Completion of squares}

\begin{align*}
C^2 + 3^6 \cdot C + 3^{11} &= 3 \cdot B^2 + 3^8 \cdot B + 3^{14} \\
C^2 + 2 \cdot \dfrac{3^6}{2} \cdot C + 3^{11} &= 3 \cdot \left(B^2 + 3^7 \cdot B + 3^{13}\right)\\
C^2 + 2 \cdot \dfrac{3^6}{2} \cdot C + 3^{11} + \left(\dfrac{3^6}{2}\right)^2 - \left(\dfrac{3^6}{2}\right)^2 &= 3 \cdot \left(B^2 + 2 \cdot \dfrac{3^7}{2} \cdot B + 3^{13} + \left(\dfrac{3^7}{2}\right)^2 - \left(\dfrac{3^7}{2}\right)^2\right)\\
\left(C + \dfrac{3^6}{2}\right)^2 + 3^{11} - \left(\dfrac{3^6}{2}\right)^2 &= 3 \cdot \left(\left(B + \dfrac{3^7}{2}\right)^2 + 3^{13}  - \left(\dfrac{3^7}{2}\right)^2\right)\\
\left(C + \dfrac{3^6}{2}\right)^2 + 3^{11} - \left(\dfrac{3^6}{2}\right)^2 &= 3 \cdot \left(B + \dfrac{3^7}{2}\right)^2 + 3 \cdot \left(3^{13}  - \left(\dfrac{3^7}{2}\right)^2\right)\\
\left(C + \dfrac{3^6}{2}\right)^2 - 3 \cdot \left(B + \dfrac{3^7}{2}\right)^2  &= 3 \cdot \left(3^{13}  - \left(\dfrac{3^7}{2}\right)^2\right) + \left(\dfrac{3^6}{2}\right)^2 - 3^{11}\\
\left(C + \dfrac{3^6}{2}\right)^2 - 3 \cdot \left(B + \dfrac{3^7}{2}\right)^2  &= \dfrac{2302911}{2}\\
\left(2C + 3^6\right)^2 - 3 \cdot \left(2B + 3^7\right)^2 = 26 \cdot 3^{11}
\end{align*}

\subsubsection{Reduction to a Pell equation}

Define
\[
X = 2C + 3^6, \qquad Y = 2B + 3^7.
\]
Then
\begin{align}
X^2 - 3Y^2 = 78 \cdot 3^{10}.
\end{align}

Write
\[
X = 3^5 \cdot x, \qquad Y = 3^5 \cdot y.
\]
Dividing through by $3^{10}$ yields the Pell-type equation
\begin{equation*}
    x^2 - 3y^2 = 78
\end{equation*}

The  Pell equation
\begin{equation*}
    x^2 - 3y^2 = 1
\end{equation*}
has fundamental solution \((x_1, y_1) = (7, 4)\), since \(7^2 - 3(4)^2 = 1\).
    A family of integer solutions of the homogeneous Pell equation are generated by
    \[
        x + y\sqrt{3} = (7 + 4\sqrt{3})^{c_1}.
    \]

    Now, we seek a particular integer solution to \eqref{eq:pell}.
    Testing small integer values of $y$,
    \[
        y = 7 \quad \Rightarrow \quad x^2 = 78 + 3(7)^2 = 78 + 147 = 225 = 15^2.
    \]
    Hence, one particular solution is \((x_0, y_0) = (15, 7)\).

    The general integer solution to~\eqref{eq:pell} is therefore
    \[
        x + y\sqrt{3} = (15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1}, \quad n \in \mathbb{Z}.
    \]
    Taking the conjugate and adding/subtracting, we obtain
    \begin{align*}
        x &= \frac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2},\\[4pt]
        y &= \frac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2\sqrt{3}}.
    \end{align*}

    Substituting back \(X = 2C + 3^6\) and \(Y = 2B + 3^{7}\),
    \begin{align*}
        C &= \frac{X - 3^6}{2}
        = \frac{-3^6 + 3^5 \cdot \dfrac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2}}{2}\\[4pt]
        &= \frac{-1458 + 243 \cdot \biggl[(15 + 7\sqrt{3})(2 + \sqrt{3})^{c_1} + (15 - 7\sqrt{3})(2 - \sqrt{3})^{c_1}\biggl]}{4},\\[8pt]
        B &= \frac{Y - 3^{7}}{2}
        = \frac{-3^{7} + 243 \cdot \dfrac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2\sqrt{3}}}{2}\\
        &= \frac{-4374 + 243 \cdot \biggl[\dfrac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{\sqrt{3}}\biggl]}{4}\\
        &= \frac{-4374 + 243 \cdot \biggl[{(5 \sqrt{3} + 7)(7 + 4\sqrt{3})^{c_1} + (7 - 5 \sqrt{3} )(7 - 4\sqrt{3})^{c_1}}\biggl]}{4}\\
    \end{align*}


\begin{theorem}[Complete Parametrisation of Solutions]
All integer solutions $(B,C)$ of
\begin{equation*} 
    2187 \cdot C^2 + 1594323 \cdot C + 387420489 = 6561 \cdot B^2 + 14348907 \cdot B + 10460353203
\end{equation*}
are given by
\[
\boxed{
\begin{aligned}
A_5 &= 
\frac{-1458 + 243 \cdot \biggl[(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}\biggl]}{4} + 729, \\
B_5 &= \frac{-4374 + 243 \cdot \biggl[{(5 \sqrt{3} + 7)(7 + 4\sqrt{3})^{c_1} + (7 - 5 \sqrt{3} )(7 - 4\sqrt{3})^{c_1}}\biggl]}{4},\\[6pt]
C_5 &= 
\frac{-1458 + 243 \cdot \biggl[(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}\biggl]}{4}, \\
D_5 &= 
\frac{-4374 + 243 \cdot \biggl[{(5 \sqrt{3} + 7)(7 + 4\sqrt{3})^{c_1} + (7 - 5 \sqrt{3} )(7 - 4\sqrt{3})^{c_1}}\biggl]}{4} + 2187.\\[6pt]
\end{aligned}
}
\]
where $c_1\in\mathbb{Z}$.
\end{theorem}



\subsection{\texorpdfstring{Case 6: $r_{3,1} = 2187$,  $r_{3,2} = 6561$ }{Case 6: r_{3,1} = 2187 , r_{3,2} = 6561}}

We consider the Diophantine equation
\begin{align}
6561\,C^2 + 14348907\,C + 10460353203
=
19683\,B^2 + 129140163\,B + 282429536481.
\end{align}


Observe that
\[
\begin{aligned}
6561 &= 3^8,\\
14348907 &= 3^{15},\\
10460353203 &= 3^{21},\\
19683 &= 3^9,\\
129140163 &= 3^{17},\\
282429536481 &= 3^{24}.
\end{aligned}
\]

Hence the equation becomes
\begin{equation}
    3^8 \cdot C^2 + 3^{15} \cdot C + 3^{21} = 3^9 \cdot B^2 + 3^{17} \cdot B + 3^{24}
\end{equation}

Dividing through by $3^8$ yields
\begin{equation}
    C^2 + 3^7 \cdot C + 3^{13} = 3 \cdot B^2 + 3^9 \cdot B + 3^{16}
\end{equation}

\subsubsection{Completion of squares}

\begin{align*}
C^2 + 3^7 \cdot C + 3^{13} &= 3 \cdot B^2 + 3^{9} \cdot B + 3^{16} \\
C^2 + 2 \cdot \dfrac{3^7}{2} \cdot C + 3^{13} &= 3 \cdot \left(B^2 + 3^8 \cdot B + 3^{15}\right)\\
C^2 + 2 \cdot \dfrac{3^7}{2} \cdot C + 3^{13} + \left( \dfrac{3^7}{2}\right)^2 - \left(\dfrac{3^7}{2}\right)^2 &= 3 \cdot \left(B^2 + 2 \cdot \dfrac{3^8}{2} \cdot B + 3^{15} + \left(\dfrac{3^8}{2}\right)^2 - \left(\dfrac{3^8}{2}\right)^2\right)\\
\left(C + \dfrac{3^7}{2}\right)^2 + 3^{13} - \left(\dfrac{3^7}{2}\right)^2 &= 3 \cdot \left(\left(B + \dfrac{3^8}{2}\right)^2 + 3^{15}  - \left(\dfrac{3^8}{2}\right)^2\right)\\
\left(C + \dfrac{3^7}{2}\right)^2 + 3^{13} - \left(\dfrac{3^7}{2}\right)^2 &= 3 \cdot \left(B + \dfrac{3^8}{2}\right)^2 + 3 \cdot \left(3^{15}  - \left(\dfrac{3^8}{2}\right)^2\right)\\
\left(C + \dfrac{3^7}{2}\right)^2 - 3 \cdot \left(B + \dfrac{3^8}{2}\right)^2  &= 3 \cdot \left(3^{15}  - \left(\dfrac{3^8}{2}\right)^2\right) + \left(\dfrac{3^7}{2}\right)^2 - 3^{13}\\
\left(C + \dfrac{3^7}{2}\right)^2 - 3 \cdot \left(B + \dfrac{3^8}{2}\right)^2  &= \dfrac{20726199}{2}\\
\left(2C + 3^7\right)^2 - 3 \cdot \left(2B + 3^8\right)^2 = 78 \cdot 3^{12}
\end{align*}


\begin{lemma}[Reduction to a Pell Equation]
The Diophantine equation
\begin{equation*}
    6561\,C^2 + 14348907\,C + 10460353203 = 19683\,B^2 + 129140163\,B + 282429536481
\end{equation*}
is equivalent, under the change of variables
\[
X = 2C + 3^7, \qquad Y = 2B + 3^8,
\]
to the Pell-type equation
\begin{align}
X^2 - 3Y^2 = 78 \cdot 3^{12}.
\end{align}
Moreover, writing $X = 3^6 \cdot x$ and $Y = 3^6 \cdot y$, this further reduces to
\begin{equation*}
    x^2 - 3y^2 = 78.
\end{equation*}
\end{lemma}

\begin{theorem}
Integer solutions of the Diophantine equation
\[
x^2 - 3y^2 = 78
\]
are given by
\[
x + y\sqrt{3}
=
(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1},
\qquad c_1 \in \mathbb{Z}.
\]
Equivalently,
\[
\begin{aligned}
x &=
\frac{
(15+7\sqrt{3})(7+4\sqrt{3})^{c_1}
+
(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}
}{2},\\[6pt]
y &=
\frac{
(15+7\sqrt{3})(7+4\sqrt{3})^{c_1}
-
(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}
}{2\sqrt{3}},
\end{aligned}
\qquad c_1\in\mathbb{Z}.
\]
\end{theorem}


\subsubsection{Recovering $B$ and $C$}

Recall
\[
B = \frac{Y - 3^8}{2}, \qquad C = \frac{X - 3^7}{2},
\quad\text{with}\quad 3^6=729.
\]

Substituting $x,y$ and simplifying (rationalising the factor $1/\sqrt{3}$)
yields
\[
\boxed{
\begin{aligned}
B &=
\frac{-13122
+ 729\Big[(7-5\sqrt{3})(7-4\sqrt{3})^{c_1}
+ (7+5\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4},\\[6pt]
C &=
\frac{-4374
+ 729\Big[(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}
+ (15+7\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4}.
\end{aligned}
}
\]

Given $A = C + 2187$ and $D = B + 6561$,

\[
\boxed{
\begin{aligned}
A &=
\frac{-4374
+ 729\Big[(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}
+ (15+7\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4} + 2187,\\[6pt]
D &=
\frac{-13122
+ 729\Big[(7-5\sqrt{3})(7-4\sqrt{3})^{c_1}
+ (7+5\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4} + 6561.
\end{aligned}
}
\]


\subsection{\texorpdfstring{Case 7: $r_{3,1} = 6561$ and $r_{3,2} = 19683$ }{Case 7: r_{3,1} = 6561 , r_{3,2} = 19683}}

We consider the Diophantine equation
\begin{equation} \label{7.00}
    19683 \cdot C^2 + 129140163 \cdot C + 282429536481 = 59049 \cdot B^2 + 1162261467 \cdot B + 7625597484987
\end{equation}


Observe that
\[
\begin{aligned}
19683 &= 3^9,\\
129140163 &= 3^{17},\\
282429536481 &= 3^{24},\\
59049 &= 3^{10},\\
1162261467 &= 3^{19},\\
7625597484987 &= 3^{27}.
\end{aligned}
\]

Thus equation \eqref{7.00} is expressible as
\begin{equation} \label{7.01}
    3^9 \cdot C^2 + 3^{17} \cdot C + 3^{24} = 3^{10} \cdot B^2 + 3^{19} \cdot B + 3^{27}
\end{equation}

Dividing through by $3^9$ yields
\begin{equation} \label{7.02}
    C^2 + 3^8 \cdot C + 3^{15} = 3 \cdot B^2 + 3^{10} \cdot B + 3^{18}
\end{equation}

\subsubsection{Completion of squares}

\begin{align*}
C^2 + 3^8 \cdot C + 3^{15} &= 3 \cdot B^2 + 3^{10} \cdot B + 3^{18} \\
C^2 + 2 \cdot \dfrac{3^8}{2} \cdot C + 3^{15} &= 3 \cdot \left(B^2 + 3^9 \cdot B + 3^{17}\right)\\
C^2 + 2 \cdot \dfrac{3^8}{2} \cdot C + 3^{15} + \left( \dfrac{3^8}{2}\right)^2 - \left(\dfrac{3^8}{2}\right)^2 &= 3 \cdot \left(B^2 + 2 \cdot \dfrac{3^9}{2} \cdot B + 3^{17} + \left(\dfrac{3^9}{2}\right)^2 - \left(\dfrac{3^9}{2}\right)^2\right)\\
\left(C + \dfrac{3^8}{2}\right)^2 + 3^{15} - \left(\dfrac{3^8}{2}\right)^2 &= 3 \cdot \left(\left(B + \dfrac{3^9}{2}\right)^2 + 3^{17}  - \left(\dfrac{3^9}{2}\right)^2\right)\\
\left(C + \dfrac{3^8}{2}\right)^2 + 3^{15} - \left(\dfrac{3^8}{2}\right)^2 &= 3 \cdot \left(B + \dfrac{3^9}{2}\right)^2 + 3 \cdot \left(3^{17}  - \left(\dfrac{3^9}{2}\right)^2\right)\\
\left(C + \dfrac{3^8}{2}\right)^2 - 3 \cdot \left(B + \dfrac{3^9}{2}\right)^2  &= 3 \cdot \left(3^{17}  - \left(\dfrac{3^9}{2}\right)^2\right) + \left(\dfrac{3^8}{2}\right)^2 - 3^{15}\\
\left(C + \dfrac{3^8}{2}\right)^2 - 3 \cdot \left(B + \dfrac{3^9}{2}\right)^2  &= \dfrac{186535791}{2}\\
\left(2C + 3^8\right)^2 - 3 \cdot \left(2B + 3^9\right)^2 = 78 \cdot 3^{14}
\end{align*}



\subsubsection{Reduction to a Pell equation}

Define
\[
X = 2C + 3^8, \qquad Y = 2B + 3^9.
\]
Then
\begin{align}
X^2 - 3Y^2 = 78 \cdot 3^{14}
\end{align}

Write
\[
X = 3^7 \cdot x, \qquad Y = 3^7 \cdot y.
\]
Dividing by $3^{14}$ yields the Pell-type equation
\begin{equation*}
    x^2 - 3y^2 = 78.
\end{equation*}

A fundamental solution to $x^2 - 3y^2 = 1$ is
\[
x = 7, \qquad y = 4,
\]
since $7^2 - 3\cdot 4^2 = 1$.

A solution to equation \eqref{1.15} is $\left(x,y\right) = \left(15,7\right)$.

A family of integer solutions are given by
\begin{align}
x + y\sqrt{3} =
(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1},
\qquad n \in \mathbb{Z}.
\end{align}

\subsubsection{Recovering $B$ and $C$}

Substituting back,
\[
X = 3^7 \cdot x_n, \qquad Y = 3^7 \cdot y_n,
\]
we obtain
\[
\boxed{
\begin{aligned}
C_n &= \frac{3^7 \cdot x_n - 3^8}{2},\\[6pt]
B_n &= \frac{3^7 \cdot y_n - 3^9}{2},
\end{aligned}
\qquad n \in \mathbb{Z}.
}
\]




\begin{lemma}[Solutions of $x^2-3y^2=78$]
\label{lem:pell6}
All integer solutions of
\[
x^2 - 3y^2 = 78
\]
are given by
\[
x + y\sqrt{3}
=
\pm(15+7\sqrt{3})(7+4\sqrt{3})^{c_1},
\qquad k\in\mathbb{Z}.
\]
Equivalently,
\[
\begin{aligned}
x &=
\frac{(15+7\sqrt{3})(7+4\sqrt{3})^{c_1}
+(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}}{2},\\[6pt]
y &=
\frac{(15+7\sqrt{3})(7+4\sqrt{3})^{c_1}
-(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}}{2\sqrt{3}}.
\end{aligned}
\]
\end{lemma}

\begin{proof}
In $\mathbb{Z}[\sqrt{3}]$ the norm is $N(a+b\sqrt{3})=a^2-3b^2$.
We have
\[
N(15+7\sqrt{3})=78,\qquad N(7+4\sqrt{3})=1.
\]

Thus every element of norm $78$ is of the form
\[
(15+7\sqrt{3})(7+4\sqrt{3})^{c_1},
\]
and the stated real formulas follow by taking conjugates.
\end{proof}

\medskip

\begin{theorem}[Parametrisation of $(A,B,C,D)$]
\label{thm:BC7}
Let $(x,y)$ be as in Lemma~\ref{lem:pell6}, and define
\[
B=\frac{3^7 \cdot y-3^9}{2},
\qquad
C=\frac{3^7 \cdot x-3^8}{2}.
\]
Then all integer solutions $(A,B,C,D)$ of the original Diophantine equation are given by
\[
\begin{aligned}
A_7 &=
\frac{-13122
+2187 \cdot \Big[(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}
+(15+7\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4} + 6561 \\
B_7 &=
\frac{-39366
+2187 \cdot \Big[(-7+5\sqrt{3})(7-4\sqrt{3})^{c_1}
+(7+5\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4},\\[6pt]
C_7 &=
\frac{-13122
+2187 \cdot \Big[(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}
+(15+7\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4}, \\
D_7 &=
\frac{-39366
+2187 \cdot \Big[(-7+5\sqrt{3})(7-4\sqrt{3})^{c_1}
+(7+5\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4} + 19683
\end{aligned}
\qquad c_1\in\mathbb{Z}.
\]
\end{theorem}

\begin{proof}
Substituting the expressions for $x$ and $y$ from Lemma~\ref{lem:pell6}
into the linear relations for $B$ and $C$ gives the stated formulas.
The coefficients arise from rationalising the factor $1/\sqrt{3}$ in $y$.
Since conjugate terms occur symmetrically, both $B$ and $C$ are integers
for all $k\in\mathbb{Z}$.
\end{proof}





\subsection{\texorpdfstring{Case 8: $r_{3,1} = 19683$ and $r_{3,2} = 59049$ }{Case 8: r_{3,1} = 19683 , r_{3,2} = 59049}}

\begin{align}
    59049 \cdot C^2 + 1162261467 \cdot C + 7625597484987 = 177147 \cdot B^2 + 10460353203 \cdot B + 205891132094649
\end{align}

Observe that
\[
\begin{aligned}
59049 &= 3^{10}, \\
1162261467 &= 3^{19}, \\
7625597484987 &= 3^{27}, \\
177147 &= 3^{11}, \\
10460353203 &= 3^{21}, \\
205891132094649 &= 3^{30}.
\end{aligned}
\]

Hence the equation becomes
\begin{align}
3^{10} \cdot C^2 + 3^{19 \cdot }C + 3^{27}
=
3^{11} \cdot B^2 + 3^{21} \cdot B + 3^{30}.
\end{align}

Dividing through by $3^{10}$ gives
\begin{align}
C^2 + 3^9 \cdot C + 3^{17}
=
3 \cdot B^2 + 3^{11} \cdot B + 3^{20}.
\end{align}

\subsubsection{Completion of squares}

Multiply both sides by $4$:
\begin{align}
4 \cdot C^2 + 4\cdot 3^9 \cdot C + 4 \cdot 3^{17}
=
12 \cdot B^2 + 4\cdot3^{11} \cdot B + 4\cdot3^{20}.
\end{align}

For the left-hand side,
\[
4C^2 + 4\cdot3^9 \cdot C + 3^{18}
=
(2C + 3^9)^2,
\]
so
\[
\text{LHS} = (2C + 3^9)^2 + 3^{17}.
\]

For the right-hand side,
\[
12 \cdot B^2 + 4\cdot3^{11} \cdot B + 4\cdot3^{20}
=
3 \cdot \bigl(2B + 3^{10}\bigr)^2 + 3^{20}.
\]

Thus we obtain
\begin{align}
(2C + 3^9)^2 + 3^{17}
=
3(2B + 3^{10})^2 + 3^{20}.
\end{align}

Rearranging,
\begin{align}
(2C + 3^9)^2 - 3(2B + 3^{10})^2
=
3^{20} - 3^{17}
=
26\cdot3^{17}.
\end{align}

\subsubsection{Pell-type equation}

Define new variables
\[
X = 2C + 3^9, \qquad Y = 2B + 3^{10}.
\]
Then
\begin{align}\label{eq:pell}
X^2 - 3Y^2 = 26\cdot3^{17}.
\end{align}

Write
\[
X = 3^8 \cdot x, \qquad Y = 3^8 \cdot y.
\]
Dividing by $3^{16}$ yields the Pell-type equation
\begin{equation*}
    x^2 - 3y^2 = 78.
\end{equation*}

The corresponding homogeneous Pell equation
    \[
        x^2 - 3y^2 = 1
    \]
    has fundamental solution \((x_1, y_1) = (7, 4)\), since \(7^2 - 3(4)^2 = 1\).
    All solutions of the homogeneous Pell equation are generated by
    \[
    x + y\sqrt{3} = (7 + 4\sqrt{3})^{c_1}.
    \]

    Now, we seek a particular integer solution to \eqref{eq:pell}.
    Testing small integer values of \(Y\),
    \[
        y = 7 \quad \Rightarrow \quad x^2 = 78 + 3(7)^2 = 78 + 147 = 225 = 15^2.
    \]
    Hence, one particular solution is \((x_0, y_0) = (15, 7)\).

    The general integer solution to~\eqref{eq:pell} is therefore
    \[
        x + y\sqrt{3} = (15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1}, \quad n \in \mathbb{Z}.
    \]
    Taking the conjugate and adding/subtracting, we obtain
    \begin{align*}
        x &= \frac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2},\\[4pt]
        y &= \frac{(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{2\sqrt{3}}.
    \end{align*}

    Substituting back \(X = 2C + 3^9\) and \(Y = 2B + 3^{10}\),
    \begin{align*}
        C &= \frac{X - 3^9}{2}
        = \frac{-3^9 + \frac{6561}{2}\bigl[(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}\bigr]}{2}\\[4pt]
        &= \frac{-39366 + (15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} + (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}}{4},\\[8pt]
        B &= \frac{Y - 3^{10}}{2}
        = \frac{-3^{10} + \frac{6561}{2\sqrt{3}}\bigl[(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}\bigr]}{2}\\
        &= \frac{-118098 + \frac{6561}{\sqrt{3}}\bigl[(15 + 7\sqrt{3})(7 + 4\sqrt{3})^{c_1} - (15 - 7\sqrt{3})(7 - 4\sqrt{3})^{c_1}\bigr]}{4}
    \end{align*}


\begin{theorem}[Parametrisation of $(A,B,C,D)$]
\label{thm:BC8}
Let $(x,y)$ be as in Lemma~\ref{lem:pell6}, and define
\[
B=\frac{3^8 \cdot y-3^{10}}{2},
\qquad
C=\frac{3^8 \cdot x-3^9}{2}.
\]
Then all integer solutions $(A,B,C,D)$ of the original Diophantine equation are given by
\[
\begin{aligned}
A_8 &=
\frac{-39366
+ 6561 \cdot \Big[(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}
+(15+7\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4} + 19683 \\
B_8 &=
\frac{-118098
+  6561 \cdot \Big[(-7+5\sqrt{3})(7-4\sqrt{3})^{c_1}
+(7+5\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4},\\[6pt]
C_8 &=
\frac{-39366
+ 6561 \cdot \Big[(15-7\sqrt{3})(7-4\sqrt{3})^{c_1}
+(15+7\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4},\\
D_8 &=
\frac{-118098
+  6561 \cdot \Big[(-7+5\sqrt{3})(7-4\sqrt{3})^{c_1}
+(7+5\sqrt{3})(7+4\sqrt{3})^{c_1}\Big]}{4} + 59049 
\end{aligned}
\qquad c_1\in\mathbb{Z}.
\]
\end{theorem}

\begin{proof}
Substituting the expressions for $x$ and $y$ from Lemma~\ref{lem:pell6}
into the linear relations for $B$ and $C$ gives the stated formulas.
The coefficients arise from rationalising the factor $1/\sqrt{3}$ in $y$.
Since conjugate terms occur symmetrically, both $B$ and $C$ are integers
for all $k\in\mathbb{Z}$.
\end{proof}

